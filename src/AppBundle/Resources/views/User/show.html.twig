{% extends 'AbleSpecExpertBundle::base.html.twig' %}

{% block body -%}
    <h3>{% trans %}User{% endtrans %}</h3>

    <table class="table table-striped records_list">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Username{% endtrans %}</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ entity.name }}</td>
            </tr>
             <tr>
                <th>{% trans %}Email{% endtrans %}</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="nav nav-pills record_actions">
    <li>
        <a href="{{ path('user_list') }}">
            {% trans %}Back to the list{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            {% trans %}Edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
