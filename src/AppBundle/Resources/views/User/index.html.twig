{% extends 'AbleSpecAdminBundle::base.html.twig' %}

{#### WATCH OUT only admin should have access to the list of user ###}

{% block body -%}
    <h3>{% trans %}User list{% endtrans %}</h3>

    <table class="table table-striped records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Username{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Email{% endtrans %}</th>
                <th>{% trans %}Description{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.description }}</td>
                <td><ul class="nav nav-pills">    <li>
        <a href="{{ path('user_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
    </li>    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
    </li></ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="nav nav-pills">
        <li>
            <a href="{{ path('user_new') }}">
                {% trans %}Create a new entry{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
