{% extends 'AbleSpecAdminBundle::base.html.twig' %}

{% block body -%}
    <h3>{% trans %}Expert{% endtrans %}</h3>

    <table class="table table-striped record_properties">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>             
                <th>{% trans %}Username{% endtrans %}</th>
                <td>{{ entity.user }}</td>
            </tr>   
            <tr>
              {#  Watch out it should be the one in webusers table #}
                <th>{% trans %}User alias{% endtrans %}</th>
                <td>{{ entity.useralias }}</td>
            </tr>         
            <tr>
                <th>{% trans %}Email{% endtrans %}</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>{% trans %}Address{% endtrans %}</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>{% trans %}Phone{% endtrans %}</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>{% trans %}Package{% endtrans %}</th>
                <td>...</td>
            </tr>
            <tr>
                <th>{% trans %}Registration number{% endtrans %}</th>
                <td>{{ entity.registrationNumber }}</td>
            </tr>
            <tr>
                <th>{% trans %}Registration date{% endtrans %}</th>
                <td>{{ entity.registrationDate|date('Y.m.d His') }}</td>
            </tr>
        </tbody>
    </table>

    <br>
    <ul class="nav nav-pills record_actions">
        <li class="active">
            <a href="{{ path('expert_list') }}">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li class="active">
            <a href="{{ path('expert_edit', { 'id' : entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
