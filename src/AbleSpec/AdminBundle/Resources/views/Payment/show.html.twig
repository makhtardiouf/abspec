{% extends 'AbleSpecAdminBundle::base.html.twig' %}

{% block body -%}
    <h3>{% trans %}Payment{% endtrans %}</h3>

    <table class="table table-striped record_properties">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Status{% endtrans %}</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>{% trans %}Amount{% endtrans %}</th>
                <td>{{ entity.amount }}</td>
            </tr>
            <tr>
                <th>{% trans %}Transaction code{% endtrans %}</th>
                <td>{{ entity.transactionCode }}</td>
            </tr>
            <tr>
                <th>{% trans %}Description{% endtrans %}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <br>
    <ul class="nav nav-pills record_actions">
        <li class="active">
            <a href="{{ path('payment') }}">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li class="active">
            <a href="{{ path('payment_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
